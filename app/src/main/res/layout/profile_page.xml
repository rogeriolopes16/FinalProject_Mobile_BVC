<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:onClick="main_page_login"
            app:srcCompat="@drawable/home"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/btn_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="170dp"
            android:onClick="location_page"
            app:srcCompat="@drawable/location"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/time"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/time_result"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="-40dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="139dp"
            android:layout_height="127dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/profile_photo_big"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/name_profile"
            android:layout_width="186dp"
            android:layout_height="30dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="-30dp"
            android:text="Tom Cruise"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/email_profile"
            android:layout_width="186dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:text="tom@tom.com"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/phone_profile"
            android:layout_width="186dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:text="(888) 777-6666"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="289dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:text="Debit / Credit card information"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/card_profile"
            android:layout_width="289dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:text="7025 0001 0002 0003"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button_exit"
            android:layout_width="229dp"
            android:layout_height="69dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="90dp"
            android:onClick="exit_app"
            android:backgroundTint="#FF0000"
            android:text="Exit" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>